{
    "name": "Smove",
    "manifest_version": 3,
    "version": "0.1.0",
    "description": "Keep track of the homes you are searching for",

    "icons": {
        "16": "icons/obj-16x16.png",
        "32": "icons/obj-32x32.png",
        "48": "icons/obj-48x48.png",
        "128": "icons/obj-128x128.png"
    },

    "background": {
        "service_worker": "./background.js",
        "type": "module"
    },

    "action": {
        "default_popup": "./popup.html",
        "default_icons":{
            "16": "icons/obj-16x16.png",
            "32": "icons/obj-32x32.png",
            "48": "icons/obj-48x48.png",
            "128": "icons/obj-128x128.png"
        } 
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://www.rightmove.co.uk/properties/*",
        "https://www.zoopla.co.uk/for-sale/details/*",
        "https://www.onthemarket.com/details/*"
    ]
   }